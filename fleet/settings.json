{
    // Terminal
    "terminal.lineSpacing": 1.4,
    "terminal.fontFamily": "MesloLGS NF",

    // Editor
    "editor.tabSize": 2,
    "editor.renderWhitespace": "All",
    "editor.formatOnSave": true,
    "editor.guides": [
        80,
        100
    ],

    // Languages
    "[go]": {
        "editor.indentStyle": "tabs",
    },
    "editor.ligatures": false
}
